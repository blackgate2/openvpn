#!/usr/bin/expect
set login [lindex $argv 0]
set server [lrange $argv 1 3]
set serverpass "dgjujytpfrhjkbrjv"
set env(TERM) vt100
set timeout 30
set i 0
spawn /usr/bin/ssh $server


expect {
"*yes/no*" {
send "yes\r"
} timeout {
exit 2
} "*password*" {
send "$serverpass\r"
set i 1
}
}

if { $i != 1 } {
expect "*password*"
send "$serverpass\r"
}

expect {
"# *" {
send "rekb $login\r"
expect "closed*"
} timeout {
exit 2
}
}
exit 0
