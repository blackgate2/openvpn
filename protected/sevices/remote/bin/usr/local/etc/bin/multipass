#!/usr/bin/perl
$account=shift;
    @variants=`find /usr/local/etc -name \'password\'`;
    foreach $var (@variants) {
        chomp $var;
        open (BASE,$var);
            while ($log=<BASE>) {
                $true=$log;
                chomp $log;
                ($log,$salt)=split(':',$log);
                if ($log eq $account) {
                print "$salt\n";
                }
            }
    }
